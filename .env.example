# Elite Locker App - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Stripe Configuration (for payments)
# Use test keys for development, live keys for production
STRIPE_PUBLISHABLE_KEY=pk_test_your-test-key-here
STRIPE_SECRET_KEY=sk_test_your-test-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# API Configuration
API_BASE_URL=https://api.elitelocker.com
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_OFFLINE_MODE=true

# Security Configuration
ENABLE_ENCRYPTION=true
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
REQUIRE_BIOMETRICS=false

# Logging Configuration
LOG_LEVEL=debug
ENABLE_REMOTE_LOGGING=false
MASK_SENSITIVE_DATA=true

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Push Notifications (if using Expo Push)
EXPO_PUSH_TOKEN=your-expo-push-token-here

# Analytics (if using external analytics)
GOOGLE_ANALYTICS_ID=your-ga-id-here
MIXPANEL_TOKEN=your-mixpanel-token-here

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id-here
GOOGLE_CLIENT_ID=your-google-client-id-here
APPLE_CLIENT_ID=your-apple-client-id-here

# File Storage (if using external storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-here

# Development Tools
FLIPPER_ENABLED=true
REACTOTRON_ENABLED=true

# Production Security
# Only set these in production environment
CERTIFICATE_PINNING_ENABLED=false
CERTIFICATE_HASH=your-certificate-hash-here

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (if using additional databases)
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/elitelocker

# Email Configuration (for notifications)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password-here

# Monitoring and Error Reporting
SENTRY_DSN=your-sentry-dsn-here
BUGSNAG_API_KEY=your-bugsnag-api-key-here

# Content Delivery Network
CDN_URL=https://cdn.elitelocker.com

# Webhook URLs
WEBHOOK_URL_STRIPE=https://api.elitelocker.com/webhooks/stripe
WEBHOOK_URL_SUPABASE=https://api.elitelocker.com/webhooks/supabase

# Development Database (for local testing)
DEV_DATABASE_URL=postgresql://localhost:5432/elitelocker_dev

# Testing Configuration
TEST_DATABASE_URL=postgresql://localhost:5432/elitelocker_test
TEST_USER_EMAIL=test@elitelocker.com
TEST_USER_PASSWORD=TestPassword123!

# Mobile App Configuration
APP_STORE_ID=your-app-store-id-here
GOOGLE_PLAY_ID=com.elitelocker.app
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Deep Linking
URL_SCHEME=elitelocker
UNIVERSAL_LINK_DOMAIN=elitelocker.com

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
BACKUP_STORAGE_URL=your-backup-storage-url-here

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key-here
DATADOG_API_KEY=your-datadog-api-key-here

# Legal and Compliance
PRIVACY_POLICY_URL=https://elitelocker.com/privacy
TERMS_OF_SERVICE_URL=https://elitelocker.com/terms
GDPR_COMPLIANCE_ENABLED=true

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh

# Maintenance Mode
MAINTENANCE_MODE_ENABLED=false
MAINTENANCE_MESSAGE=We're currently performing maintenance. Please try again later.

# Custom Branding (for white-label versions)
BRAND_NAME=Elite Locker
BRAND_COLOR_PRIMARY=#007AFF
BRAND_COLOR_SECONDARY=#34C759
BRAND_LOGO_URL=https://cdn.elitelocker.com/logo.png
